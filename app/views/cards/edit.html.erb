<head>
  <title>FocusField</title>
  <%= render partial: "layouts/head_elements" %>
</head>
<body>
  <%= render partial: "layouts/navbar" %>
  <div class="container">
    <div class="content">
      <h1>Cards#edit</h1>
      <p>Find me in app/views/cards/edit.html.erb</p>
    </div>
  </div>
  <div class="container">
    <div class="box">
      <%= form_with model: @resource, url: card_path(@resource.id_hex) do |f| %>
        <div class="field">
          <%= f.label :name %>
          <div class="control">
            <%= f.text_field :name, class: "input" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.submit "update", class: "button is-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
