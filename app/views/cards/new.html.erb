<head>
  <title>FocusField</title>
  <%= render partial: "layouts/head_elements" %>
</head>
<body>
  <%= render partial: "layouts/navbar" %>
  <div class="container">
    <div class="content">
      <h1>Cards#new</h1>
      <p>Find me in app/views/cards/new.html.erb</p>
    </div>
  </div>
  <div class="box">
    <div class="container">
      <%= form_with model: @resource, path: cards_path do |f| %>
        <div class="field">
          <%= f.label :name %>
          <div class="control">
            <%= f.text_field :name, class: "input" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.submit "create", class: "button is-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
