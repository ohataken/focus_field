<head>
  <title>FocusField</title>
  <%= render partial: "layouts/head_elements" %>
</head>
<body>
  <div class="container">
    <div class="content">
      <h1>Sessions#new</h1>
      <p>Find me in app/views/sessions/new.html.erb</p>
    </div>
    <%= form_with url: sessions_path, method: :post do |f| %>
      <div class="field">
        <%= f.label :name %>
        <div class="control">
          <%= f.text_field :name, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="control">
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.submit "sign in", class: "button is-link" %>
        </div>
      </div>
    <% end %>
  </div>
</body>
